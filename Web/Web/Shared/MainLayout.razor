@inherits LayoutComponentBase
@using Web.Areas.Identity.Pages.Account;

<div class="page">

    <div class="main">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <a class="logo mx-auto" href="/">
                    <img src="img/logo.svg" />
                </a>

                <form class="form-inline mx-auto my-2 my-lg-0" style="align-content:start; align-items: start">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Поиск</button>
                </form>

                <NavLink href="#" class="mx-auto" Match="NavLinkMatch.All">
                    <div class="text-center">
                        <a href="@(LoginModel.MyUser is not null ? "/Basket": "")" style="margin-right:100px;"><img src="img/basket.svg" /></a>
                    </div>
                </NavLink>

                <LoginDisplay />
            </div>
        </nav>

        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-top:10px;">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <ul class="navbar-nav mx-auto mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active navbar-text">
                        <a class="nav-link" href="/">Главная<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item navbar-text">
                        <NavLink class="nav-link" href="/Category" Match="NavLinkMatch.All">
                            <span class="oi oi-plus" aria-hidden="true"></span>Каталог товаров
                        </NavLink>
                    </li>
                    <li class="nav-item navbar-text">
                        <a class="nav-link" href="/aboutUs">О сайте</a>
                    </li>
                    <li class="nav-item navbar-text">
                        <a class="nav-link disabled" href="#">Добавить товар</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="content px-4">
            @Body
        </div>
    </div>

    <footer class="border-top footer text-muted" style="text-align: center; background-color: #DFF5F0; margin-top:10px;">
        <div class="container">
            &copy; 2021 - WutenderBorsch - "Besser nicht zu wissen." - <a asp-area="" href="Privacy" style="color:gray">Privacy</a>
        </div>
    </footer>

</div>